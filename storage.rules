rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function para verificar se o usuário é admin
    // Usa Custom Claims definidos via Firebase Admin SDK
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // ========================================
    // REGRAS PARA APLICAÇÃO ORIGINAL
    // ========================================

    // Regras para a pasta de banners (aplicação original)
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Regras para a pasta de team (aplicação original)
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ========================================
    // REGRAS PARA APLICAÇÃO GAMA DIAS (_GD)
    // ========================================

    // Regras para a pasta de banners GD
    match /banners_GD/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Regras para a pasta de team GD
    match /team_GD/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Regras para outras pastas
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
