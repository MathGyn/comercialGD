rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function para verificar se o usuário é admin
    // Usa Custom Claims definidos via Firebase Admin SDK
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // Regras para a pasta de banners
    match /banners/{allPaths=**} {
      // Permite leitura pública de imagens
      allow read: if true;
      // Apenas admins podem fazer upload
      allow write: if isAdmin();
    }
    
    // Regras para outras pastas (team, etc)
    match /{allPaths=**} {
      // Permite leitura pública
      allow read: if true;
      // Apenas admins podem fazer upload
      allow write: if isAdmin();
    }
  }
}
